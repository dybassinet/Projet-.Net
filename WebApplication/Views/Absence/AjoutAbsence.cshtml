@using WebApplication.Models;
@model AbsenceViewModel

@using (Html.BeginForm("CreerAbsence", "Absence"))
{
    @Html.HiddenFor(m => m.EleveId)
    <div class="form-group">
        @Html.LabelFor(m => m.DateAbsence)
        @Html.TextBoxFor(m => m.DateAbsence, new { @Value = DateTime.Now.Date.ToString("dd/MM/yyyy"), @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Motif)
        @Html.TextBoxFor(m => m.Motif, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Sauvegarder" />
}

<script>

    $(document).ready(function () {
        $("#DateAbsence").datepicker();
    })

</script>
