@using WebApplication.Models;
@model List<EleveViewModel>
@{
    ViewBag.Title = "Index";
}
@Scripts.Render("~/bundles/jquery")

<div id="content">
    <div class="row form-group">
        @Html.TextBox("searchEleve", "", new { @class = "form-control", placeholder = "Rechercher un élève" })
        <button onclick='rechercher($("#searchEleve").val())' class="btn btn-primary">Rechercher</button>
    </div>
    <table class="table table-bordered">
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
        </tr>
        @foreach (EleveViewModel vm in Model)
        {
            <tr>
                <td>@vm.Nom</td>
                <td>@vm.Prenom</td>
                <td><button onclick="getEleve(@vm.EleveId)" class="btn btn-primary">Detail</button></td>
            </tr>
        }
    </table>
</div>

<script>
    function getEleve(eleveId) {
        var serviceURL = '/Eleve/DetailEleve';
        $.ajax({
            url: serviceURL,
            data: {
                eleveId: eleveId,
            },
            success: function (data) {
                console.log(data);
                $("#content").html(data);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function rechercher(criterias) {
        url = '@Url.Action("Index", "Eleve", new { criterias = "__criterias__" })';
        url = url.replace("__criterias__", criterias);
        console.log(url);
        location.href = url;
    }

