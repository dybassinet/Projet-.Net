@{
    ViewBag.Title = "Home Page";
}
@Scripts.Render("~/bundles/jquery")
<div id="content">

    <div id="bestEleves">

    </div>

    <div id="lastAbsences">

    </div>
</div>

<script>

    function getBestEleves() {
        var serviceURL = '/Eleve/GetBestEleves';
        $.ajax({
            url: serviceURL,
            success: function (data) {
                console.log(data);
                $("#bestEleves").html(data);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function getLastAbsences() {
        var serviceURL = '/Absence/GetLastAbsences';
        $.ajax({
            url: serviceURL,
            success: function (data) {
                console.log(data);
                $("#lastAbsences").html(data);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    $(document).ready(function () {
        getBestEleves();
        getLastAbsences();
    });
    

</script>