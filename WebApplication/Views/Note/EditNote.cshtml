@using WebApplication.Models;
@model NoteViewModel

@using (Html.BeginForm("EditNote", "Note"))
{
    @Html.HiddenFor(m => m.EleveId)
    @Html.HiddenFor(m => m.NoteId)
    <div class="form-group">
        @Html.LabelFor(m => m.DateNote)
        @Html.TextBoxFor(m => m.DateNote, new { @Value = DateTime.Now.Date.ToString("dd/MM/yyyy"), @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Matiere)
        @Html.TextBoxFor(m => m.Matiere, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ValeurNote)
        @Html.TextBoxFor(m => m.ValeurNote, new { @class = "form-control", @type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Appreciation)
        @Html.TextBoxFor(m => m.Appreciation, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Sauvegarder" />
}

<script>

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    $(document).ready(function () {
        $("#DateNote").datepicker();
    })

</script>

